{
    "name": "Semango Dev Container",
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],
    "service": "semango",
    "workspaceFolder": "/app",
    // Forward ports from the container to the host.
    "forwardPorts": [
        9991,
        50051
    ],
    // Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "settings": {
                "go.toolsManagement.checkForUpdates": "local",
                "go.useLanguageServer": true,
                "go.gopath": "/go", // Standard Go path in many containers
                "go.goroot": "/usr/local/go", // Path to Go installation in the container
                "files.eol": "\n",
                "editor.tabSize": 2,
                "editor.insertSpaces": false
            },
            "extensions": [
                "golang.go",
                "mutantdino.resourcemonitor",
                "ms-vscode.makefile-tools",
                "cue.cue", // For CUE language support
                "zxh404.vscode-proto3", // For Protocol Buffer support
                "ms-azuretools.vscode-docker" // For Docker integration
            ]
        }
    },
    // Use 'postCreateCommand' to run commands after the container is created.
    // Example: "postCreateCommand": "go mod download",
    // Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
    "remoteUser": "root" // The golang images often run as root by default or have a non-root 'vscode' user.
    // If your Dockerfile creates a non-root user, specify it here.
}